<UserControl x:Class="AutoInjectPlugin.AutoInjectSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="10">

        <TextBlock Text="inject.exe Path" />
        <TextBox Text="{Binding Settings.InjectorPath}" Margin="0,5,0,10" />

        <TextBlock Text="DLL Path" />
        <TextBox Text="{Binding Settings.DllPath}" Margin="0,5,0,10" />

        <TextBlock Text="DLL32 Path" />
        <TextBox Text="{Binding Settings.DllPath32}" Margin="0,5,0,10" />

        <TextBlock Text="nw.exe Path" />
        <TextBox Text="{Binding Settings.NwPath}" Margin="0,5,0,10" />

        <TextBlock Text="nw.exe Working Dir" />
        <TextBox Text="{Binding Settings.NwDir}" Margin="0,5,0,10" />

    </StackPanel>
</UserControl>
