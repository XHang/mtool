<UserControl x:Class="AutoInjectPlugin.AutoInjectSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Margin="10" Orientation="Vertical">

        <!-- inject.exe -->
        <TextBlock Text="inject.exe Path" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.InjectorPath}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="InjectorPath" Click="Browse_Click"/>
        </Grid>

        <!-- DLL -->
        <TextBlock Text="DLL Path" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.DllPath}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="DllPath" Click="Browse_Click"/>
        </Grid>

        <!-- DLL32 -->
        <TextBlock Text="DLL32 Path" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.DllPath32}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="DllPath32" Click="Browse_Click"/>
        </Grid>

        <!-- WolfDDL -->
        <TextBlock Text="WolfDDL Path" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.WolfDDL}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="WolfDDL" Click="Browse_Click"/>
        </Grid>

        <!-- WolfDDL3 -->
        <TextBlock Text="WolfDDL3 Path" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.WolfDDL3}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="WolfDDL3" Click="Browse_Click"/>
        </Grid>

        <!-- RGSS -->
        <TextBlock Text="RGSSDDL Path" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.RGSSDDL}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="RGSSDDL" Click="Browse_Click"/>
        </Grid>

        <!-- RGSS 64 -->
        <TextBlock Text="RGSSDDL64 Path" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.RGSSDDL64}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="RGSSDDL64" Click="Browse_Click"/>
        </Grid>

        <!-- nw.exe -->
        <TextBlock Text="nw.exe Path" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.NwPath}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="NwPath" Click="Browse_Click"/>
        </Grid>

        <!-- nw.exe Working Dir -->
        <TextBlock Text="nw.exe Working Dir" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.NwDir}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="NwDir" Click="Browse_Click"/>
        </Grid>

        <TextBlock Text="TempFolder" />
        <Grid Margin="0,5,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding Settings.TempFolder}" Margin="0,0,5,0" />
            <Button Grid.Column="1" Content="浏览..." Width="70" Tag="TempFolder" Click="Browse_Click"/>
        </Grid>

        
    </StackPanel>
</UserControl>
